@model IEnumerable<Komputerowy_SHOP.Models.Hdd>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@*Wyszukiwarka*@
<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        Nazwa: <input type="text" name="searchString" />

        @*sortowanie*@
        Sortuj po <select name="sortow">
            <option value="">Nazwa</option>
            <option value="nazwa">Nazwa</option>
            <option value="cena">Cena</option>
        </select>
        <input type="submit" value="Filtruj" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rpm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rpm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
